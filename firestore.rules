    match /audit/{auditId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }
    
    /**
     * @description Allows access to settings collection, scoped to coachId, for any signed-in user.
     * @path /databases/(default)/documents/settings/{coachId}
     * @allow (get) Any signed-in user.
     * @allow (list) Denied.
     * @allow (create) Only if the user is creating settings for their own coachId.
     * @allow (update, delete) Only the coachId can update/delete.
     * @principle Settings are readable by any authenticated user, but writable only by the coach.
     */
    match /settings/{coachId} {
        allow get: if isSignedIn();
        allow list: if false;
        allow create: if isSignedIn() && request.auth.token.coachId == coachId;
        allow update: if isExistingOwner(coachId);
        allow delete: if isExistingOwner(coachId);
    }
  }
}