/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for most collections, with specific exceptions for public read access to some data.
 *
 * Data Structure:
 * - /organizations/{orgId}: Stores organization data, accessible to all authenticated users.
 * - /users/{userId}: Stores user data, only accessible to the user themselves.
 * - Other collections: All other collections are generally accessible with authorization checks.
 *
 * Key Security Decisions:
 * - User listing is explicitly denied to prevent information disclosure.
 * - Ownership is strictly enforced for write operations on most collections.
 * - Denormalization of `orgId` is used extensively to avoid costly `get()` operations in security rules.
 * - Subscription plan management is limited to authenticated users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows access to organization documents based on the organization ID.
     * @path /organizations/{orgId}
     * @allow get, list: if true;
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Allows any signed in user to read organizations. Only authenticated users can create. No updates or deletes are allowed.
     */
    match /organizations/{orgId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Enforces user-ownership for user documents.  A user can only read/write their own document.
     * @path /users/{userId}
     * @allow get: if isOwner(userId);
     * @allow list: if false;
     * @allow create: if isOwner(userId);
     * @allow update: if isExistingOwner(userId);
     * @allow delete: if isExistingOwner(userId);
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows access to class documents.
     * @path /classes/{classId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /classes/{classId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to playlist documents.
     * @path /playlists/{playlistId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /playlists/{playlistId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to video documents.
     * @path /videos/{videoId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /videos/{videoId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to segment documents within a video.
     * @path /videos/{videoId}/segments/{segmentId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /videos/{videoId}/segments/{segmentId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to question documents within a video segment.
     * @path /videos/{videoId}/segments/{segmentId}/questions/{questionId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /videos/{videoId}/segments/{segmentId}/questions/{questionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to assignment documents.
     * @path /assignments/{assignmentId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /assignments/{assignmentId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to progress documents.
     * @path /progress/{progressId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /progress/{progressId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to attempt documents.
     * @path /attempts/{attemptId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /attempts/{attemptId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to subscription plan documents.
     * @path /subscription_plans/{subscriptionPlanId}
     * @allow get, list: if isSignedIn();
     * @allow create: if isSignedIn();
     * @allow update: if false;
     * @allow delete: if false;
     * @principle Enforces authentication for read and create operations.
     */
    match /subscription_plans/{subscriptionPlanId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to teacher subscription documents, enforcing user-ownership via denormalized userId.
     * @path /teacher_subscriptions/{teacherSubscriptionId}
     * @allow get, list: if isTeacherSubscriptionOwner(teacherSubscriptionId);
     * @allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
     * @allow update: if isExistingTeacherSubscriptionOwner(teacherSubscriptionId);
     * @allow delete: if isExistingTeacherSubscriptionOwner(teacherSubscriptionId);
     * @principle Enforces document ownership for all operations.
     */
    match /teacher_subscriptions/{teacherSubscriptionId} {
        allow get, list: if get(/databases/$(database)/documents/teacher_subscriptions/$(teacherSubscriptionId)).data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update: if isSignedIn() && request.resource.data.userId == request.auth.uid && get(/databases/$(database)/documents/teacher_subscriptions/$(teacherSubscriptionId)).data.userId == request.auth.uid;
        allow delete: if isSignedIn() && request.resource.data.userId == request.auth.uid && get(/databases/$(database)/documents/teacher_subscriptions/$(teacherSubscriptionId)).data.userId == request.auth.uid;
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
    return isOwner(userId) && resource != null;
  }

  // redundant function
  // function isTeacherSubscriptionOwner(teacherSubscriptionId) {
  //   return request.auth.uid == resource.data.userId;
  // }

  // redundant function
  // function isExistingTeacherSubscriptionOwner(teacherSubscriptionId) {
  //     return request.auth.uid == resource.data.userId && resource != null;
  // }
}