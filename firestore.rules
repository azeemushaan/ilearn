/**
 * @fileoverview Firestore Security Rules for the educational platform.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure data access based on user roles (admin, teacher, student)
 * and coach (tenant) ownership. It enforces strict access control, particularly for write operations.
 *
 * Data Structure:
 * - Coaches are top-level documents in `/coaches/{coachId}`.
 * - Users are stored in `/users/{userId}` and are associated with a coach via the `coachId` field.
 * - Most data is organized in top-level collections, linked to coaches and/or users via `coachId` and `userId` fields.
 * - Cohort member mappings are stored in subcollections under `/cohorts/{cohortId}/members/{userId}`.
 *
 * Key Security Decisions:
 * - Listing of users is generally disallowed except where explicitly required (e.g., cohort members).
 * - Data validation is minimized in the prototyping phase to allow for rapid iteration.
 * - Public read access is granted for `/playlists`, assuming these are designed to be publicly visible.
 * - All write operations require authentication (`isSignedIn()`) and authorization checks.
 *
 * Denormalization for Authorization:
 * - Coach-owned resources (e.g., Playlists, Videos, Assignments) MUST include a `coachId` field
 *   to simplify ownership checks.
 * - User-specific data (e.g., Attempts, Progress, Events, Notes) MUST include both `coachId` and `userId` fields.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user is the owner of the document, based on the provided userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     *              Also verifies that the document exists to prevent accidental changes to non-existent data.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Checks if the authenticated user is an admin for the coach.
     */
    function isAdminForCoach(coachId) {
        return isSignedIn() && request.auth.token.coachId == coachId && request.auth.token.role == 'admin';
    }

    /**
     * @description Checks if the authenticated user is a teacher for the coach.
     */
    function isTeacherForCoach(coachId) {
        return isSignedIn() && request.auth.token.coachId == coachId && (request.auth.token.role == 'teacher' || request.auth.token.role == 'admin');
    }


    /**
     * @description Defines access rules for coach documents.
     * @path /coaches/{coachId}
     * @allow (get) Signed-in user can get a coach.
     * @allow (create) Signed-in user can create a coach with matching coachId.
     * @allow (update) Signed-in user can update a coach with matching coachId.
     * @allow (delete) Denied.
     * @deny (get) Non-signed-in user.
     * @deny (create) Signed-in user cannot create a coach with a mismatched coachId.
     * @deny (update) Signed-in user cannot update a coach with a mismatched coachId.
     * @principle Enforces coach ownership.
     */
    match /coaches/{coachId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == coachId;
      allow update: if isSignedIn() && request.auth.uid == coachId;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for user documents.
     * @path /users/{userId}
     * @allow (get) Signed-in user can get their own user document.
     * @allow (create) Signed-in user can create their own user document.
     * @allow (update) Signed-in user can update their own user document.
     * @allow (delete) Denied.
     * @deny (get) Non-signed-in user.
     * @deny (create) Signed-in user cannot create a user document with a mismatched userId.
     * @deny (update) Signed-in user cannot update a user document with a mismatched userId.
     * @principle Enforces user ownership and self-creation.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.coachId == request.auth.token.coachId;
      allow update: if isOwner(userId) && request.resource.data.coachId == resource.data.coachId;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for invite documents.
     * @path /invites/{inviteId}
     * @allow (get) Signed-in user can get an invite if they are an admin for the coach.
     * @allow (create) Signed-in user can create an invite if they are an admin for the coach.
     * @allow (update) Signed-in user can update an invite if they are an admin for the coach.
     * @allow (delete) Signed-in user can delete an invite if they are an admin for the coach.
     * @deny (get) Non-admin user.
     * @deny (create) Non-admin user.
     * @deny (update) Non-admin user.
     * @deny (delete) Non-admin user.
     * @principle Enforces admin-only access to invites.
     */
    match /invites/{inviteId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for cohort documents.
     * @path /cohorts/{cohortId}
     * @allow (get) Signed-in user can get a cohort if they are a teacher/admin for the coach.
     * @allow (create) Signed-in user can create a cohort if they are a teacher/admin for the coach.
     * @allow (update) Signed-in user can update a cohort if they are a teacher/admin for the coach.
     * @allow (delete) Signed-in user can delete a cohort if they are a teacher/admin for the coach.
     * @deny (get) Non-teacher/admin user.
     * @deny (create) Non-teacher/admin user.
     * @deny (update) Non-teacher/admin user.
     * @deny (delete) Non-teacher/admin user.
     * @principle Enforces coach-level teacher/admin access to cohorts.
     */
    match /cohorts/{cohortId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

        /**
     * @description Defines access rules for cohort member documents.
     * @path /cohorts/{cohortId}/members/{userId}
     * @allow (get) Signed-in user can get a cohort member if they are a teacher/admin for the coach or the user themselves.
     * @allow (create) Signed-in user can create a cohort member if they are a teacher/admin for the coach.
     * @allow (update) Signed-in user can update a cohort member if they are a teacher/admin for the coach.
     * @allow (delete) Signed-in user can delete a cohort member if they are a teacher/admin for the coach.
     * @deny (get) Non-teacher/admin or non-self user.
     * @deny (create) Non-teacher/admin user.
     * @deny (update) Non-teacher/admin user.
     * @deny (delete) Non-teacher/admin user.
     * @principle Enforces coach-level teacher/admin access to cohort members.
     */
    match /cohorts/{cohortId}/members/{userId} {
      allow get: if isSignedIn() && ((request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher')) || isOwner(userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for playlist documents.
     * @path /playlists/{playlistId}
     * @allow (get) Public read access.
     * @allow (create) Signed-in user can create a playlist if they are a teacher/admin for the coach and the coachId matches.
     * @allow (update) Signed-in user can update a playlist if they are a teacher/admin for the coach and the coachId matches.
     * @allow (delete) Signed-in user can delete a playlist if they are a teacher/admin for the coach and the coachId matches.
     * @deny (create) Non-teacher/admin user.
     * @deny (update) Non-teacher/admin user.
     * @deny (delete) Non-teacher/admin user.
     * @principle Public read, teacher/admin-only writes.
     */
    match /playlists/{playlistId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for video documents.
     * @path /videos/{videoId}
     * @allow (get) Signed-in user can get a video if they are a teacher/admin for the coach.
     * @allow (create) Signed-in user can create a video if they are a teacher/admin for the coach.
     * @allow (update) Signed-in user can update a video if they are a teacher/admin for the coach.
     * @allow (delete) Signed-in user can delete a video if they are a teacher/admin for the coach.
     * @deny (get) Non-teacher/admin user.
     * @deny (create) Non-teacher/admin user.
     * @deny (update) Non-teacher/admin user.
     */
    match /videos/{videoId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for segment documents.
     * @path /videos/{videoId}/segments/{segmentId}
     */
    match /videos/{videoId}/segments/{segmentId} {
      allow get: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for question documents.
     * @path /videos/{videoId}/segments/{segmentId}/questions/{questionId}
     */
    match /videos/{videoId}/segments/{segmentId}/questions/{questionId} {
      allow get: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == get(/databases/$(database)/documents/videos/$(videoId)).data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for assignment documents.
     * @path /assignments/{assignmentId}
     */
    match /assignments/{assignmentId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for enrollment documents.
     * @path /enrollments/{enrollmentId}
     */
    match /enrollments/{enrollmentId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for attempt documents.
     * @path /attempts/{attemptId}
     */
    match /attempts/{attemptId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for progress documents.
     * @path /progress/{progressId}
     */
    match /progress/{progressId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && request.resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for event documents.
     * @path /events/{eventId}
     */
    match /events/{eventId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for note documents.
     * @path /notes/{noteId}
     */
    match /notes/{noteId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId) && request.resource.data.coachId == resource.data.coachId;
      allow delete: if isOwner(resource.data.userId) && resource.data.coachId == request.auth.token.coachId;
    }

    /**
     * @description Defines access rules for certificate documents.
     * @path /certificates/{certificateId}
     */
    match /certificates/{certificateId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for resource documents.
     * @path /resources/{resourceId}
     */
    match /resources/{resourceId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for subscription documents.
     * @path /subscriptions/{subId}
     */
    match /subscriptions/{subId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if isSignedIn() && request.auth.token.coachId == resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
    }

    /**
     * @description Defines access rules for payment documents.
     * @path /payments/{paymentId}
     */
    match /payments/{paymentId} {
      allow get: if isSignedIn() && (request.auth.token.coachId == resource.data.coachId || isOwner(resource.data.userId));
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Defines access rules for audit documents.
     * @path /audit/{auditId}
     */
    match /audit/{auditId} {
      allow get: if isSignedIn() && request.auth.token.coachId == resource.data.coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if false;
      allow delete: if false;
    }

      /**
     * @description Defines access rules for coach settings.
     * @path /settings/{coachId}
     */
    match /settings/{coachId} {
      allow get: if isSignedIn() && request.auth.token.coachId == coachId;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow update: if isSignedIn() && request.auth.token.coachId == request.resource.data.coachId && (request.auth.token.role == 'admin' || request.auth.token.role == 'teacher');
      allow delete: if false;
    }
  }
}