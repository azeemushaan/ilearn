/**
 * @file Firebase Security Rules for iLearn (ER21)
 * @description This ruleset enforces a multi-tenant security model based on coachId and user roles, with a global admin override.
 *
 * Data Structure:
 * - Coaches are the top-level tenants, with data nested under collections like /coaches/{coachId}.
 * - Users have a role and are associated with a coach via coachId.
 * - Other collections like playlists, videos, assignments, etc., also have a coachId for scoping.
 *
 * Key Security Decisions:
 * - Admins (role == 'admin') bypass all other security checks.
 * - Non-admin users are scoped to their coachId.
 * - Listing /users is denied to non-admins for privacy. Admins are allowed to list/filter users.
 * - The /settings/{coachId} document allows any authenticated user to read settings.
 *
 * Denormalization for Authorization:
 * - Almost all collections include `coachId` to avoid costly `get()` operations for authorization.
 *
 * Structural Segregation:
 * - No explicit structural segregation is used in this setup. Public and private content is not separated into different collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // Helper function to check if the user is the owner of the resource (coachId matches)
    function isOwner(coachId) {
      return isSignedIn() && request.auth.token.coachId == coachId;
    }

    // Helper function to check if the user is the owner of the existing resource
    function isExistingOwner(coachId) {
        return isOwner(coachId) && resource != null;
    }

    // Global admin override
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    /**
     * @description Allows read and write access to coaches collection.
     * @path /databases/(default)/documents/coaches/{coachId}
     * @allow (get, list) Signed-in admin user.
     * @allow (create, update, delete) Signed-in admin user.
     * @deny (get, list) Non-admin user.
     * @deny (create, update, delete) Non-admin user.
     * @principle Admin can manage coaches
     */
    match /coaches/{coachId} {
      allow get, list: if false;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows access to users collection, with restrictions.
     * @path /databases/(default)/documents/users/{userId}
     * @allow (get) Any signed-in user.
     * @allow (list) Admin only.
     * @allow (create) Only if the user is creating their own document (userId in path matches auth.uid).
     * @allow (update, delete) Only the user themselves can update/delete their own document.
     * @deny (list) Non-admin users.
     * @deny (create) If the user is trying to create a document for another user.
     * @deny (update, delete) If the user is trying to update/delete another user's document.
     * @principle Users can read/write their own profile data. Admins can manage all users. Listing is restricted to admins.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && resource != null;
      allow delete: if request.auth.uid == userId && resource != null;
    }

    /**
     * @description Allows access to invites collection.
     * @path /databases/(default)/documents/invites/{inviteId}
     */
    match /invites/{inviteId} {
      allow get, list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows access to cohorts collection, scoped to coachId.
     * @path /databases/(default)/documents/cohorts/{cohortId}
     * @allow (get, list) Only users who are owners (coachId matches).
     * @allow (create) Only users who are owners (coachId matches).
     * @allow (update, delete) Only the owner can update/delete.
     * @deny (get, list) Non-owners.
     * @deny (create) Non-owners.
     * @deny (update, delete) Non-owners.
     * @principle Enforces coach-level ownership of cohorts.
     */
    match /cohorts/{cohortId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }

    /**
     * @description Allows access to cohort members collection.
     * @path /databases/(default)/documents/cohorts/{cohortId}/members/{userId}
     * @allow (get, list) Only users who are owners (coachId matches).
     * @allow (create) Only users who are owners (coachId matches).
     * @allow (update, delete) Only the owner can update/delete.
     */
    match /cohorts/{cohortId}/members/{userId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }

    /**
     * @description Allows access to playlists collection, scoped to coachId.
     * @path /databases/(default)/documents/playlists/{playlistId}
     * @allow (get, list) Only users who are owners (coachId matches).
     * @allow (create) Only users who are owners (coachId matches).
     * @allow (update, delete) Only the owner can update/delete.
     */
    match /playlists/{playlistId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }

    /**
     * @description Allows access to videos collection, scoped to coachId.
     * @path /databases/(default)/documents/videos/{videoId}
     * @allow (get, list) Only users who are owners (coachId matches).
     * @allow (create) Only users who are owners (coachId matches).
     * @allow (update, delete) Only the owner can update/delete.
     */
    match /videos/{videoId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }

    /**
     * @description Allows access to video segments collection.
     * @path /databases/(default)/documents/videos/{videoId}/segments/{segmentId}
     */
    match /videos/{videoId}/segments/{segmentId} {
      allow get, list: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId);
      allow create: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId);
      allow update: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId) && resource != null;
      allow delete: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId) && resource != null;
    }

    /**
     * @description Allows access to question collection.
     * @path /databases/(default)/documents/videos/{videoId}/segments/{segmentId}/questions/{questionId}
     */
    match /videos/{videoId}/segments/{segmentId}/questions/{questionId} {
      allow get, list: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId);
      allow create: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId);
      allow update: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId) && resource != null;
      allow delete: if isSignedIn() && isOwner(get(/databases/$(database)/documents/$(request.path.segments[1])).data.coachId) && resource != null;
    }

    /**
     * @description Allows access to assignments collection, scoped to coachId.
     * @path /databases/(default)/documents/assignments/{assignmentId}
     * @allow (get, list) Only users who are owners (coachId matches).
     * @allow (create) Only users who are owners (coachId matches).
     * @allow (update, delete) Only the owner can update/delete.
     */
    match /assignments/{assignmentId} {
      allow get, list: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow create: if isSignedIn() && isOwner(request.resource.data.coachId);
      allow update: if isExistingOwner(resource.data.coachId);
      allow delete: if isExistingOwner(resource.data.coachId);
    }

    /**
     * @description Allows access to enrollments collection, scoped to coachId.
     * @path /databases/(default)/documents/enrollments/{enrollmentId}
     * @allow (get, list) Only users who are owners (coachId matches).
