    /**
     * @description Allows read-only access to subscription plan documents for all users.
     * @path /subscription_plans/{subscriptionPlanId}
     * @allow get, list: if true;
     * @allow create, update, delete: if false; // TODO: Implement admin-only validation
     * @deny create, update, delete: if true; // Placeholder to enforce explicit denial.
     * @principle Public read access for subscription plans, admin-only writes.
     */
    match /subscription_plans/{subscriptionPlanId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Implement admin-only validation
    }

    /**
     * @description Allows access to teacher subscription documents.
     * @path /teacher_subscriptions/{teacherSubscriptionId}
     * @allow get: if isOwner(resource.data.userId);
     * @allow list: if false; // Teacher subscription listing is generally disallowed.
     * @allow create: if request.resource.data.userId == request.auth.uid;
     * @allow update: if isExistingOwner(resource.data.userId);
     * @allow delete: if isExistingOwner(resource.data.userId);
     * @principle Enforces document ownership for writes, allows owner-only reads.
     */
    match /teacher_subscriptions/{teacherSubscriptionId} {
        allow get: if isOwner(resource.data.userId);
        allow list: if false;
        allow create: if request.resource.data.userId == request.auth.uid;
        allow update: if isExistingOwner(resource.data.userId);
        allow delete: if isExistingOwner(resource.data.userId);
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}